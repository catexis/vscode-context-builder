{
  "name": "context-builder",
  "displayName": "Context Builder",
  "description": "Automated project context builder for LLMs",
  "version": "0.0.1",
  "repository": "github:catexis/vscode-context-builder",
  "icon": "assets/icon.png",
  "publisher": "catexis",
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "llm",
    "ai",
    "context",
    "prompt",
    "markdown",
    "xml"
  ],
  "engines": {
    "vscode": "^1.108.1"
  },
  "activationEvents": [
    "workspaceContains:.vscode/context-config.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context-builder.initConfig",
        "title": "Init Configuration",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.selectProfile",
        "title": "Select Profile",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.switchWorkspace",
        "title": "Switch Workspace",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.startWatching",
        "title": "Start Watching",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.stopWatching",
        "title": "Stop Watching",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.buildOnce",
        "title": "Build Once",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.copyOutputPath",
        "title": "Copy Output Path",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.showMenu",
        "title": "Show Menu",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.createProfile",
        "title": "Create Profile",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.removeProfile",
        "title": "Remove Profile",
        "category": "Context Builder"
      },
      {
        "command": "context-builder.selectFormat",
        "title": "Select Output Format",
        "category": "Context Builder"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"**/*.{ts,json,md,yaml}\"",
    "check-format": "prettier --check \"**/*.{ts,json,md,yaml}\"",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "js-yaml": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "js-tiktoken": "^1.0.21",
    "jsonc-parser": "^3.3.1",
    "micromatch": "^4.0.8"
  }
}
